@model CurrencyConverter
<style>
 .table {
        vertical-align:top;
	    width: 100%;
	    border: none;
	    margin-bottom: 20px;
        font-family:'Franklin Gothic';
        font-size: 25px;
        text-align: center;
        color: grey;      
    }
    .table thead th {        
        vertical-align: top;	    
	    text-align: center;
	    border: none;
	    padding: 10px 15px;	    
        font-family:'Franklin Gothic';
	    font-size: 20px;                      
    }
    .table thead tr th:first-child {
	    border-radius: 0px 0 0 0px;
    }
    .table thead tr th:last-child {
	    border-radius: 0 0px 0px 0;
    }
    .table tbody td {
        vertical-align: top;
	    text-align: center;
	    border: none;
	    padding: 10px 15px;
        font-family:'Franklin Gothic';
	    font-size: 20px;
        border-bottom-style: solid;
        border-bottom-color: gainsboro;     
    }
    .table tbody tr:nth-child(even){
	    background: #f3f3f3;
    }
    .table tbody tr td:first-child {
	    border-radius: 0px 0 0 0px;
    }
    .table tbody tr td:last-child {
	    border-radius: 0 0px 0px 0;
    }
</style>

<center> 
    <table class="table" width="1000">
        <tr><th colspan="4" ><font color="dimgray">Курс валют ЦБ</font><th></tr>
        <tr><th><font color="dimgray">Код</font></th><th><font color="dimgray">Номинал</font></th><th><font color="dimgray">Валюта</font></th><th><font color="dimgray">Курс ЦБ</font></th></tr>
        <tr><td>TJS</td><td>10</td><td><font color="black">Таджикских сомони</font></td><td>@($"{Model.TJS10}")</td></tr>
        <tr><td>TRY</td><td>10</td><td><font color="black">Турецких лир</font></td><td>@($"{Model.TRY10}")</td></tr>
        <tr><td>TMT</td><td>1</td><td><font color="black">Новый туркменский манат</font></td><td>@($"{Model.TMT}")</td></tr>
        <tr><td>UZS</td><td>10000</td><td><font color="black">Узбекских сумов</font></td><td>@($"{Model.UZS10000}")</td></tr>
        <tr><td>CZK</td><td>10</td><td><font color="black">Чешских крон</font></td><td>@($"{Model.CZK10}")</td></tr>
        <tr><td>SEK</td><td>10</td><td><font color="black">Шведских крон</font></td><td>@($"{Model.SEK10}")</td></tr>
        <tr><td>CHF</td><td>1</td><td><font color="black">Швейцарский франк</font></td><td>@($"{Model.CHF}")</td></tr>
        <tr><td>ZAR</td><td>10</td><td><font color="black">Южноафриканских рэндов</font></td><td>@($"{Model.ZAR10}")</td></tr>      
    </table>
</center>


