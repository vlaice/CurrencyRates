@model CurrencyConverter
<style>
    .table {
        vertical-align:top;
	    width: 100%;
	    border: none;
	    margin-bottom: 20px;
        font-family:'Franklin Gothic';
        font-size: 25px;
        text-align: center;
        color: grey;      
    }
    .table thead th {        
        vertical-align: top;	    
	    text-align: center;
	    border: none;
	    padding: 10px 15px;	    
        font-family:'Franklin Gothic';
	    font-size: 20px;                      
    }
    .table thead tr th:first-child {
	    border-radius: 0px 0 0 0px;
    }
    .table thead tr th:last-child {
	    border-radius: 0 0px 0px 0;
    }
    .table tbody td {
        vertical-align: top;
	    text-align: center;
	    border: none;
	    padding: 10px 15px;
        font-family:'Franklin Gothic';
	    font-size: 20px;
        border-bottom-style: solid;
        border-bottom-color: gainsboro;     
    }
    .table tbody tr:nth-child(even){
	    background: #f3f3f3;
    }
    .table tbody tr td:first-child {
	    border-radius: 0px 0 0 0px;
    }
    .table tbody tr td:last-child {
	    border-radius: 0 0px 0px 0;
    }
</style>

<center>
    <table class="table" width="1000">
        <tr><th colspan="4" ><font color="dimgray">Курс валют ЦБ</font><th></tr>
        <tr><th><font color="dimgray">Код</font></th><th><font color="dimgray">Номинал</font></th><th><font color="dimgray">Валюта</font></th><th><font color="dimgray">Курс ЦБ</font></th></tr>
        <tr><td>KGS</td><td>100</td><td><font color="black">Киргизских сомов</font></td><td>@($"{Model.KGS100}")</td></tr>
        <tr><td>CNY</td><td>10</td><td><font color="black">Китайских юаней</font></td><td>@($"{Model.CNY10}")</td></tr>
        <tr><td>MDL</td><td>10</td><td><font color="black">Молдавских леев</font></td><td>@($"{Model.MDL10}")</td></tr>
        <tr><td>NOK</td><td>10</td><td><font color="black">Норвежских крон</font></td><td>@($"{Model.NOK10}")</td></tr>
        <tr><td>PLN</td><td>1</td><td><font color="black">Польский злотый</font></td><td>@($"{Model.PLN}")</td></tr>
        <tr><td>RON</td><td>1</td><td><font color="black">Румынский лей</font></td><td>@($"{Model.RON}")</td></tr>
        <tr><td>XDR</td><td>1</td><td><font color="black">СДР</font></td><td>@($"{Model.XDR}")</td></tr>
        <tr><td>SGD</td><td>1</td><td><font color="black">Сингапурский доллар</font></td><td>@($"{Model.SGD}")</td></tr>      
    </table>
</center>

